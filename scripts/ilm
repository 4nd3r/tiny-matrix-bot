#!/bin/sh
tmp=$( tempfile )
curl -s -m 1 -o $tmp https://kvlt.ee/ilm/
tln=$( sed -nr 's/^tallinn-mustamäe-temp:\s(.+)$/\1/p' $tmp )
hrk=$( sed -nr 's/^tallinn-harku-temp:\s(.+)$/\1/p' $tmp )
prn=$( sed -nr 's/^pärnu-temp:\s(.+)$/\1/p' $tmp )
trt=$( sed -nr 's/^tartu-keskmine-temp:\s(.+)$/\1/p' $tmp )
vru=$( sed -nr 's/^võru-temp:\s(.+)$/\1/p' $tmp )
echo "Tallinn: $tln; Harku: $hrk; Pärnu: $prn; Tartu: $trt; Võru: $vru" | sed 's/\./,/g'
rm -f $tmp
