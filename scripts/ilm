#!/bin/sh
tmp=$( tempfile )
curl -s -m 1 -o $tmp https://kvlt.ee/ilm/
tln=$( sed -nr 's/^tallinn-temp:\s(.+)$/\1/p' $tmp )
hrk=$( sed -nr 's/^harku-temp:\s(.+)$/\1/p' $tmp )
prn=$( sed -nr 's/^p채rnu-temp:\s(.+)$/\1/p' $tmp )
trt=$( sed -nr 's/^tartu-temp:\s(.+)$/\1/p' $tmp )
vru=$( sed -nr 's/^v천ru-temp:\s(.+)$/\1/p' $tmp )
echo "Tallinn: $tln; Harku: $hrk; P채rnu: $prn; Tartu: $trt; V천ru: $vru" | sed 's/\./,/g'
rm -f $tmp
