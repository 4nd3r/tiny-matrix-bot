_()
{
    o="$( hdate -q -s -l "N$1" -L "E$2" -z "$( date +%z | sed 's/[+0]//g' )" )"
    r="$( echo "$o" | grep -Po '(?<=sunrise:\s).+' )"
    s="$( echo "$o" | grep -Po '(?<=sunset:\s).+' )"
    if [ "$( date -d "$r" +%s )" -gt "$( date +%s )" ]
    then echo "üåÖ $r $3"
    else echo "üåá $s $3"
    fi
}

